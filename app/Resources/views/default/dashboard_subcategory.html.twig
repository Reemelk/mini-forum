{% extends 'base.html.twig' %}

{% block title %}Dashboard - Subcategory{% endblock %}

{% block body %}
    <div class="container">
        <div class="dropdown open">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Administration
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <a class="dropdown-item" href="{{ path('dashboard_category') }}">Categories</a>
                <a class="dropdown-item" href="{{ path('dashboard_subcategory') }}">Subcategories</a>
                <a class="dropdown-item" href="{{ path('dashboard_users') }}">Users</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path('forum') }}">Forum</a>
            </div>
        </div>
    </div>
    <div id="subcategory" class="container">
        <div class="col-lg-12">
                <div id="create_subcategory">
                    {{ form_start(create_subcategory) }}
                        {{ form_errors(create_subcategory) }}

                        <label>Create Subcategory</label>
                        <fieldset class="form-group">
                            {{ form_row(create_subcategory.title) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(create_subcategory.description) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(create_subcategory.isPosted) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(create_subcategory.category) }}
                        </fieldset>
                    {{ form_end(create_subcategory) }}
                </div>

                <div id="update_subcategory">
                    {{ form_start(update_subcategory) }}
                        <label>Update Subcategory</label>
                        {{ form_errors(update_subcategory.category) }}
                        <fieldset class="form-group">
                            {{ form_row(update_subcategory.subcategory) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(update_subcategory.isPosted) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(update_subcategory.new_title) }}
                        </fieldset>
                        <fieldset class="form-group">
                            {{ form_row(update_subcategory.new_description) }}
                        </fieldset>
                    {{ form_end(update_subcategory) }}
                </div>
                <div id="delete_subcategory">
                    {{ form_start(delete_subcategory) }}
                        {{ form_errors(delete_subcategory) }}
                    <fieldset class="form-group">
                        {{ form_row(delete_subcategory) }}
                    </fieldset>
                    {{ form_end(delete_subcategory) }}
                </div>
        </div>
    </div>
{% endblock %}